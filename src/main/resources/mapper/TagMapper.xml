<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ixcoret.blog.mapper.TagMapper">

    <insert id="saveBatch" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_tag(name) values
        <foreach collection="tags" item="tag" separator=",">
            (#{tag.name})
        </foreach>
    </insert>

    <select id="list" resultType="com.ixcoret.blog.pojo.entity.Tag">
        select id, name from t_tag;
    </select>
</mapper>