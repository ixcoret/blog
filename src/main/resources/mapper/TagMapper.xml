<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ixcoret.blog.mapper.TagMapper">

    <sql id="Base_Column_List">
        id, name, create_time
    </sql>

    <insert id="saveBatch" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
        insert into t_tag(name) values
        <foreach collection="tags" item="tag" separator=",">
            (#{tag.name})
        </foreach>
    </insert>

    <update id="update">
        update t_tag
        <set>
            <if test="name != null and name != ''">
                name = #{name}
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="save">
        insert into t_tag (name, create_time) values (#{name}, #{createTime})
    </update>

    <delete id="deleteById">
        delete
        from t_tag
        where id = #{id}
    </delete>

    <delete id="deleteBatch">
        delete from t_tag where id in (
        <foreach collection="ids" item="id" separator=",">
            #{id}
        </foreach>
        )
    </delete>

    <select id="listTagOptions" resultType="com.ixcoret.blog.vo.TagOptionVO">
        select id, name
        from t_tag;
    </select>

    <select id="countTags" resultType="java.lang.Integer">
        select count(id)
        from t_tag;
    </select>

    <select id="listBackTags" resultType="com.ixcoret.blog.vo.TagBackVO">
        select t.id, t.name, count(a.id) as articleCount, t.create_time as createTime
        from (select id, name, create_time from t_tag order by id desc limit #{index}, #{pageSize}) t
                 left join t_article_tag a_t on t.id = a_t.tag_id
                 left join t_article a on a_t.article_id = a.id
        group by t.id

    </select>

    <select id="selectOne" resultType="com.ixcoret.blog.entity.Tag">
        select
        <include refid="Base_Column_List"></include>
        from t_tag where name = #{name}
    </select>
</mapper>